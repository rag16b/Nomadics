<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Add fragments - Dynamically or Statically -->

    <fragment class="edu.fsu.cs.nomadics.MainFragment"
        android:id="@+id/main"
        android:tag="main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <fragment class="edu.fsu.cs.nomadics.WeatherFragment"
        android:id="@+id/weather"
        android:tag="weather_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <fragment class="edu.fsu.cs.nomadics.BookmarkFragment"
        android:id="@+id/bookmark"
        android:tag="bookmark_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>
