    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linerlayout"
        android:layout_marginTop="25dp">

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/hotelsbutton"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:background="@color/halftransparent"
            android:fontFamily="@font/bebasregular"
            android:text="Hotels"
            android:textColor="@color/white" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/restaurantsbutton"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:background="@color/halftransparent"
            android:fontFamily="@font/bebasregular"
            android:text="Restaurants"
            android:textColor="@color/white" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/parksbutton"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/restaurantsbutton"
            android:layout_toRightOf="@+id/restaurantsbutton"
            android:background="@color/halftransparent"
            android:fontFamily="@font/bebasregular"
            android:text="Parks"
            android:textColor="@color/white" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/shopsbutton"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/parksbutton"
            android:layout_toRightOf="@+id/parksbutton"
            android:background="@color/halftransparent"
            android:fontFamily="@font/bebasregular"
            android:text="Shops"
            android:textColor="@color/white" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
