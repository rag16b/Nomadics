<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".PlacesFragment">


    <EditText
        android:id="@+id/searchinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="26dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/searchbutton"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:layout_toEndOf="@+id/searchinfo"
        android:layout_toRightOf="@+id/searchinfo"
        android:background="@color/white"
        android:fontFamily="@font/bebasregular"
        android:text="Search" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="288dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/weatherb"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:fontFamily="@font/bebasregular"
        android:text="Places to Go"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/hotelsbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchinfo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        android:background="@color/halftransparent"
        android:fontFamily="@font/bebasregular"
        android:text="Hotels"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/restaurantsbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchinfo"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/hotelsbutton"
        android:layout_toRightOf="@+id/hotelsbutton"
        android:background="@color/halftransparent"
        android:fontFamily="@font/bebasregular"
        android:text="Restaurants"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/parksbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchinfo"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/restaurantsbutton"
        android:layout_toRightOf="@+id/restaurantsbutton"
        android:background="@color/halftransparent"
        android:fontFamily="@font/bebasregular"
        android:text="Parks"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/shopsbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchinfo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/parksbutton"
        android:layout_toRightOf="@+id/parksbutton"
        android:background="@color/halftransparent"
        android:fontFamily="@font/bebasregular"
        android:text="Shops"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/homebutton"
        android:textSize="20sp"
        android:layout_width="98dp"
        android:background="@color/halftransparent"
        android:fontFamily="@font/bebasregular"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-10dp"
        android:text="Home" />

    <Button
        android:id="@+id/weatherb"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="-8dp"
        android:layout_toEndOf="@+id/homebutton"
        android:layout_toRightOf="@+id/homebutton"
        android:background="@color/halftransparent"
        android:fontFamily="@font/bebasregular"
        android:text="Weather"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bookmarkb"
        android:textSize="20sp"
        android:layout_width="124dp"
        android:background="@color/halftransparent"
        android:fontFamily="@font/bebasregular"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="-9dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_toEndOf="@+id/weatherb"
        android:layout_toRightOf="@+id/weatherb"
        android:text="Bookmarks" />

</RelativeLayout>